while ! stellar-core --conf /opt/stellar/core/etc/__CORE_CONFIG__ -c info &> /dev/null ; do
  echo "Waiting for stellar-core to be available..."
  sleep 1
done

echo "starting horizon..."
set -e
exec $DIR/horizon
